{
  "manifest_version": 2,
  "name": "hypr-devns",
  "version": "1.0",
  "description": "Routes localhost traffic through per-workspace network namespaces",
  "permissions": [
    "proxy",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "hypr-devns@localhost"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["cookie-isolate-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["cookie-isolate.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}
